{
  "name": "cz-conventional-changelog-emoji",
  "description": "Commitizen adapter following the conventional-changelog format with emojis",
  "version": "0.1.0",
  "main": "src/index.js",
  "author": "Maik Ellerbrock <opensource@frapsoft.com> (https://github.com/ellerbrock)",
  "homepage": "https://github.com/ellerbrock/cz-conventional-changelog-emoji",
  "repository": {
    "type": "git",
    "url": "https://github.com/ellerbrock/cz-conventional-changelog-emoji.git"
  },
  "license": "MIT",
  "scripts": {
    "test": "echo 'Tests need to be setup!'",
    "lint": "jshint src/*.js",
    "prerelease": "run lint",
